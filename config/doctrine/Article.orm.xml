<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping/doctrine-mapping.xsd">

    <entity name="App\News\Domain\Article" table="article">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="title" type="string" length="255"/>
        <field name="shortDescription" type="string" length="500" column="short_description"/>
        <field name="content" type="text"/>
        <field name="numberOfViews" type="integer" column="number_of_views"/>
        <field name="isTop" type="bool" column="is_top"/>
        <field name="createdAt" type="datetime" column="created_at"/>
        <field name="updatedAt" type="datetime" column="updated_at"/>
        <field name="deletedAt" type="datetime" column="deleted_at" nullable="true"/>

        <!-- Many-to-One relationship with Image -->
        <many-to-one field="image" target-entity="App\News\Domain\Image">
            <join-column name="image_id" referenced-column-name="id"/>
        </many-to-one>

        <!-- Many-to-Many relationship with Category -->
        <many-to-many field="categories" target-entity="App\News\Domain\Category">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="article_category">
                <join-columns>
                    <join-column name="article_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="category_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>

</doctrine-mapping>